{
  "name": "beanfolio",
  "productName": "Beanfolio",
  "private": true,
  "version": "0.2.1",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:desktop",
    "dev:web": "vite",
    "dev:desktop": "concurrently -k \"vite\" \"wait-on tcp:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -b && vite build",
    "build:pages": "tsc -b && vite build --base=/beanfolio/",
    "desktop:electron": "npm run build && electron .",
    "desktop": "npm run dist:mac:dir && npm run desktop:open",
    "desktop:open": "sh -c 'APP_PATH=$(find release -maxdepth 3 -type d -name \"Beanfolio.app\" | head -n 1); if [ -z \"$APP_PATH\" ]; then echo \"Beanfolio.app not found in release. Run npm run dist:mac:dir first.\"; exit 1; fi; open \"$APP_PATH\"'",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:dir": "npm run build && electron-builder --mac --dir",
    "preview:web": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@handsontable/react": "^14.5.0",
    "handsontable": "^14.5.0",
    "hyperformula": "^2.7.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.beanfolio.desktop",
    "productName": "Beanfolio",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "icon": "build/icon.icns",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
